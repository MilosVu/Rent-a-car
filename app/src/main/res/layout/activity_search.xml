<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.google.android.material.navigation.NavigationView
        android:id="@+id/sign_out"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:menu="@menu/sign_out_layout"
        />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:layout_above="@id/bottom_navigation"
        android:layout_below="@id/sign_out"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="10sp"
        android:padding="20sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10sp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="10sp"
                android:text="Brand"
                android:textColor="@android:color/black"
                android:textSize="15sp"
                android:layout_marginRight="10sp"
                />
            <Spinner
                android:id="@+id/brandSpinner"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"  />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10sp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="10sp"
                android:text="Type"
                android:textColor="@android:color/black"
                android:textSize="15sp"
                android:layout_marginRight="10sp"
                />
            <Spinner
                android:id="@+id/typeSpinner"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"  />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10sp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="10sp"
                android:text="From"
                android:textColor="@android:color/black"
                android:textSize="15sp"
                android:layout_marginRight="10sp"
                />
            <TextView
                android:id="@+id/dateFromTV"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="10sp"
                android:text="1/1/2021"
                android:textColor="@android:color/black"
                android:textSize="15sp"
                android:layout_marginRight="10sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="10sp"
                android:text="To"
                android:textColor="@android:color/black"
                android:textSize="15sp"
                android:layout_marginRight="10sp"
                />
            <TextView
                android:id="@+id/dateToTV"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="10sp"
                android:text="1/1/2021"
                android:textColor="@android:color/black"
                android:textSize="15sp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10sp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="10sp"
                android:text="Price range"
                android:textColor="@android:color/black"
                android:textSize="15sp"
                android:layout_marginRight="10sp"
                />
            <EditText
                android:layout_width="100sp"
                android:layout_height="match_parent"
                android:layout_marginRight="10sp"
                android:hint="Min"
                android:textSize="15sp"
                android:id="@+id/minPriceET"/>
            <EditText
                android:layout_width="100sp"
                android:layout_height="match_parent"
                android:layout_marginRight="10sp"
                android:hint="Max"
                android:textSize="15sp"
                android:id="@+id/maxPriceET"/>
        </LinearLayout>
        <TextView
            android:id="@+id/errorSearchTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10sp"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="15sp"
            android:layout_marginLeft="10sp"
            />
        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Search"
            android:layout_marginLeft="10sp"
            android:onClick="Search"/>

    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:menu="@menu/bottom_navigation"
        android:background="?android:attr/windowBackground"/>

</RelativeLayout>